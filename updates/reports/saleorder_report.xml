<odoo>
    <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
           <xpath
            expr="//div[@id='informations']//div[4]" position="after">
             <div t-if="doc.shipping_type" class="col-auto col-3 mw-100 mb-2">
                    <strong>Shipping Type:</strong>
                    <p class="m-0" t-field="doc.shipping_type"/>
                </div>
        </xpath>

         <xpath
            expr="//div[@id='informations']//div[4]" position="after">
             <div t-if="doc.shipping_company.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Shipping Company:</strong>
                    <p class="m-0" t-field="doc.shipping_company.name"/>
                </div>
        </xpath>

          <xpath
            expr="//div[@id='informations']//div[4]" position="after">
             <div t-if="doc.driver_id.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Driver:</strong>
                    <p class="m-0" t-field="doc.driver_id.name"/>
                </div>
        </xpath>
         <xpath
            expr="//div[@id='informations']//div[4]" position="after">
             <div t-if="doc.car_number" class="col-auto col-3 mw-100 mb-2">
                    <strong>Car Number:</strong>
                    <p class="m-0" t-field="doc.car_number"/>
                </div>
        </xpath>

    </template>
</odoo>